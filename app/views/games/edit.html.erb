<%= form_with model: @game do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :content %>
  <%= f.rich_text_area :content %>

  <%= f.label :min %>
  <%= f.text_field :min %>

  <%= f.label :max %>
  <%= f.text_field :max %>

  <%= f.label :time %>
  <%= f.text_field :time %>

  <%= f.label :dificullty %>
  <%= f.select :dificullty, [1,2,3,4,5] %>

  <%= f.label :space %>
  <%= f.select :space, [1,2,3,4,5] %>

  <%= f.submit "更新", class:"border" %>

<% end %>
