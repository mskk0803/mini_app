<div class="px-4 py-16 mx-auto sm:max-w-xl md:max-w-full lg:max-w-screen-xl md:px-24 lg:px-8 lg:py-20">
 <h1 class="text-3xl font-extrabold leading-none sm:text-4xl xl:text-4xl">
    <%= @game.title %>
 </h1>
  <div class="flex flex-col">
    <div class="mb-5 border-t">
        <div class="grid py-5 sm:grid-cols-4">
            <div class="sm:col-span-3 lg:col-span-2">
                <div class="mb-3">
                    <p class="text-gray-700">
                        人数：<%= @game.min %>～<%= @game.max %>
                    </p>
                    <p class="text-gray-700">
                        所要時間：<%= @game.time %>分程度
                    </p>
                    <p class="text-gray-700">
                        難易度：<%= @game.dificullty  %>
                    </p>
                    <p class="text-gray-700">
                        スペース：<%= @game.space %>
                    </p>
                    <p class="text-gray-700">
                        タグ：<%= @tags %>
                    </p>
                </div>
            </div>
        </div>
    </div>
    <div class="mb-10 border-t border-b divide-y">
        <div class="grid py-5 sm:grid-cols-4">
            <div class="sm:col-span-3 lg:col-span-2">
                <div class="mb-3">
                    <p class="text-3xl font-extrabold leading-none sm:text-4xl xl:text-4xl">
                        Let's Play !
                    <p>
                    </br>
                    <%= @game.content %>
                </div>
            </div>
        </div>
    </div>
    <div class="mb-10 border-t border-b divide-y">
        <div class="grid py-5 sm:grid-cols-4">
            <div class="sm:col-span-3 lg:col-span-2">
                <div class="mb-3">
                    <p class="text-3xl font-extrabold leading-none sm:text-4xl xl:text-4xl">
                        Comments
                    <p>
                    </br>
                    
                </div>
            </div>
        </div>
    </div>

    <%= link_to "編集", edit_game_path(@game) %>
    <%= button_to "削除", game_path(@game), method: :delete %>

  </div>
</div>